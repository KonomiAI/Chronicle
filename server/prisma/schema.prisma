// For formatting and linting, install the vs-code prisma plugin

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Activity {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  price      Decimal
  isArchived Boolean
}
